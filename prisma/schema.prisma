generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum QuizDifficulty {
  EASY
  MEDIUM
  HARD
}

model QuizQuestion {
  id          String         @id @default(cuid())
  prompt      String
  choices     String         // JSON array of 3-4 options
  answerIndex Int            // 0..3
  fact        String?        // optional 1-sentence fun fact
  tags        String         @default("[]") // JSON array ["Deutschland","Allgemeinwissen"]
  difficulty  QuizDifficulty @default(EASY)
  createdAt   DateTime       @default(now())
}

model Session {
  id        String   @id @default(cuid())
  code      String   @unique
  createdAt DateTime @default(now())
}
