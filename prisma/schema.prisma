generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model QuizQuestion {
  id          String         @id @default(cuid())
  prompt      String
  choices     String
  answerIndex Int
  fact        String?
  tags        String         @default("[]")
  difficulty  QuizDifficulty @default("EASY")
  createdAt   DateTime       @default(now())
}

model Session {
  id        String   @id @default(cuid())
  code      String   @unique
  createdAt DateTime @default(now())
}

enum QuizDifficulty {
  EASY
  MEDIUM
  HARD
}
